<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/textfield"
        android:textSize="40sp"
        android:gravity="end" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:background="@drawable/textfield"
        android:layout_below="@id/textView1"
        android:gravity="end" />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/textView2"
        android:layout_marginTop="0dp"
        android:background="@drawable/button"
        android:text="AC"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"></Button>

    <Button
        android:id="@+id/buttonBackspace"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/textView2"
        android:layout_toRightOf="@+id/buttonClear"
        android:background="@drawable/button"
        android:text="B"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="%"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/textView2"
        android:background="@drawable/button"
        android:id="@+id/buttonPercent">
    </Button>


    <Button
        android:id="@+id/buttonDivide"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@id/textView2"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/buttonPercent"
        android:background="@drawable/button"
        android:padding="2dp"
        android:text="/"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="9"
        android:layout_marginTop="2dp"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/buttonClear"
        android:id="@+id/button9">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="8"
        android:textSize="25sp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/buttonBackspace"
        android:id="@+id/button8">
    </Button>

    <Button
        android:id="@+id/button7"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonPercent"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:background="@drawable/button"
        android:text="7"
        android:textColor="#ffffff"
        android:textSize="25sp"></Button>


    <Button
        android:id="@+id/buttonMultiply"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonDivide"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/buttonPercent"
        android:background="@drawable/button"
        android:text="*"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="6"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/button9"
        android:id="@+id/button6">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="5"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/button8"
        android:id="@+id/button5">
    </Button>

    <Button
        android:id="@+id/button4"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/button7"

        android:layout_toRightOf="@+id/buttonBackspace"
        android:background="@drawable/button"
        android:text="4"
        android:textColor="#ffffff"
        android:textSize="25sp"></Button>

    <Button
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:text="-"
        android:textSize="25sp"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/buttonPercent"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/buttonMultiply"
        android:background="@drawable/button"
        android:id="@+id/buttonsubstraction">
    </Button>


    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="3"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/button6"
        android:id="@+id/button3">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="2"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/button5"
        android:id="@+id/button2">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="1"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/button4"
        android:id="@+id/button1">
    </Button>


    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="96dp"
        android:layout_height="88dp"
        android:layout_below="@id/buttonsubstraction"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/buttonPercent"
        android:background="@drawable/button"
        android:padding="2dp"
        android:text="+"
        android:textColor="@color/colorAccent"
        android:textSize="25sp"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="0"
        android:textSize="25sp"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/button3"
        android:id="@+id/button0">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="."
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="#ffffff"
        android:background="@drawable/button"
        android:layout_below="@id/button2"
        android:id="@+id/buttonDot">
    </Button>

    <Button
        android:layout_width="186dp"
        android:layout_height="88dp"
        android:text="="
        android:textSize="35sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="#ff9800"
        android:background="@drawable/button"
        android:layout_below="@id/button1"
        android:id="@+id/buttonEqual">
    </Button>

</RelativeLayout>